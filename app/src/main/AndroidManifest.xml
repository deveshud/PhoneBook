<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.deveshbhardwaj.phonebook">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="Home"
            android:icon="@drawable/iconphonebook"
            android:label="PhoneBook">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddContact"
            android:label="ADD CONTACT"/>
        <activity android:name=".SearchContact"
            android:label="SEARCH CONTACT"/>
        <activity android:name=".Editinfo" />
        <activity android:name=".call" />
        <activity android:name=".msg"></activity>
    </application>

</manifest>